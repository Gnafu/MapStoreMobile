<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layer_checkboxes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"  >

      <TextView
            
            style="?android:attr/listSeparatorTextViewStyle"
            android:layout_marginRight="4dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_layers"
            android:textColor="#FFFFFF" />
      	<!--  Buttons -->
		<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
    	<ImageButton
		    android:background="@drawable/drawer_selectable_item"
		    android:src="@drawable/ic_action_search"
		    android:contentDescription="@string/menu_geostore"
	        android:id="@+id/mapstore_edit"
	        android:layout_width="wrap_content"
	        android:layout_gravity="right"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFF"
	         />
		 <ImageButton
   		    android:background="@drawable/drawer_selectable_item"
		    android:src="@drawable/ic_collection_as_list"
		    android:contentDescription="@string/menu_geostore"
	        android:id="@+id/mapstore_detail"
	        android:layout_width="wrap_content"
	        android:layout_gravity="right"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFF"
	         />
</LinearLayout>
       
	<!-- Layer list -->	
    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true" >

    </ListView>
